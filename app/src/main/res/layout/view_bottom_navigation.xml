<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple030330">

    <com.duong.rog.ui.custom.bottombar.BottomItemLayout
        android:id="@+id/tabTheme"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tabAppManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.duong.rog.ui.custom.bottombar.BottomItemLayout
        android:id="@+id/tabAppManager"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tabFolder"
        app:layout_constraintStart_toEndOf="@id/tabTheme"
        app:layout_constraintTop_toTopOf="parent" />

    <com.duong.rog.ui.custom.bottombar.BottomItemLayout
        android:id="@+id/tabFolder"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tabAppManager"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>