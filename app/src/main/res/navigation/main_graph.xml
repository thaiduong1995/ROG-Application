<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/previewFragment">

    <fragment
        android:id="@+id/previewFragment"
        android:name="com.duong.my_app.ui.fragment.PreviewFragment"
        android:label="PreviewFragment">
        <action
            android:id="@+id/actionPreviewToMain"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right"
            app:popUpTo="@id/previewFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.duong.my_app.ui.fragment.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/actionMainToListImage"
            app:destination="@id/listImageFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>

    <fragment
        android:id="@+id/listImageFragment"
        android:name="com.duong.my_app.ui.fragment.ListImageFragment"
        android:label="ListImageFragment">

        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="folderPath"
            app:argType="string" />
        <argument
            android:name="listImage"
            app:argType="com.duong.my_app.data.model.Image[]" />
        <action
            android:id="@+id/actionListImageToImagePreview"
            app:destination="@id/imagePreviewFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />

    </fragment>

    <fragment
        android:id="@+id/imagePreviewFragment"
        android:name="com.duong.my_app.ui.fragment.ImagePreviewFragment"
        android:label="ImagePreviewFragment">

        <argument
            android:name="image"
            app:argType="com.duong.my_app.data.model.Image" />
        <argument
            android:name="listImage"
            app:argType="com.duong.my_app.data.model.Image[]" />
    </fragment>

</navigation>